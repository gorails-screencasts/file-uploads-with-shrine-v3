


<div class="row">
  <div class="col-sm-6">
    <h1>Photos</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_photo_path, class: 'btn btn-primary' do %>
    Add New Photo
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Image data</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <%= content_tag :tr, id: dom_id(photo), class: dom_class(photo) do %>
          

                      <td><%= photo.title %></td>
                      <td><%= photo.image_data %></td>
          
          
            <td><%= link_to 'Show', photo %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
